{
  "name": "Whatsapp reactions",
  "description": "Enable the WhatsApp send reactions feature!",
  "version": "1.0",
  "manifest_version": 3,

  "content_scripts": [{
    "matches": ["*://web.whatsapp.com/*"],
    "all_frames": true,
    "js": ["content-script.js"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [{
    "resources": ["inject.js"],
    "matches": ["<all_urls>"]
  }],  

  "permissions": [
    "scripting",
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "*://web.whatsapp.com/*"
  ]
}
